<MainScreen>:
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            size_hint: 1 , 0.2
            Button:
                text: "Header"
            Button:
                text: "Menu"
                size_hint:.15, 1
                on_press: 
                    root.manager.current = 'welcomeScreen'
                    root.manager.transition.direction = 'right'
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size: self.size
            GridLayout:
                cols: 1
                orientation: "lr-tb"
                size_hint_y: None
                height: self.minimum_height
                Button:
                    text:"Body"
                    size_hint_y: None
                    size_y: "100dp"
                Button:
                    text:"News 1"
                    size_hint_y: None
                    size_y: "100dp"
                Button:
                    text:"News 2"
                    size_hint_y: None
                    size_y: "100dp"
                Button:
                    text:"News 3"
                    size_hint_y: None
                    size_y: "100dp"                
                Button:
                    text:"News 4"
                    size_hint_y: None
                    size_y: "100dp"                
                Button:
                    text:"News 5"
                    size_hint_y: None
                    size_y: "100dp"
<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text:"Hello"
            size: "400dp","80dp"
            pos:"200dp","300dp"
        Button:
            text:"Next Screen"
            on_press: 
                root.manager.current = 'mainScreen'
                root.manager.transition.direction = 'left'